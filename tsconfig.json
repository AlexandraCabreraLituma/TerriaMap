{
    "compilerOptions": {
        "target": "es2018",
        "experimentalDecorators": true,
        "module": "esNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "allowJs": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "ts-out",
        "resolveJsonModule": true,
        "noImplicitAny": true,
  
        "baseUrl": "./",
        "paths": {
          "terrace/*": ["lib/*"]
        }
    },
    "include": [
        "./lib/**/*",
        "./test/**/*"
    ]
  }
  